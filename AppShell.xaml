<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="ColorTubes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ColorTubes.Views"
    xmlns:resources="clr-namespace:ColorTubes.Resources.Localization">

    <TabBar>
        <ShellContent
            Title="{x:Static resources:AppResources.Menu_Game}"
            ContentTemplate="{DataTemplate views:GamePage}" />
        <ShellContent
            Title="{x:Static resources:AppResources.Menu_Levels}"
            ContentTemplate="{DataTemplate views:LevelsPage}" />
        <ShellContent
            Title="{x:Static resources:AppResources.Menu_Settings}"
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>
