<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ColorTubes.Views.LevelsPage"
    x:Name="LevelsPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Уровни">

    <ScrollView Padding="16">
        <VerticalStackLayout Spacing="12">
            <CollectionView ItemsSource="{Binding Levels}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12" CornerRadius="12" HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                <Label Text="{Binding Title}" FontSize="18" VerticalOptions="Center"/>
                                <Button Grid.Column="1" Text="Играть"
                                        Command="{Binding BindingContext.OpenLevelCommand, Source={x:Reference LevelsPageRoot}}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>