<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ColorTubes.Views.GamePage"
    x:Name="GamePageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:ColorTubes.Resources.Localization"
    xmlns:conv="clr-namespace:ColorTubes.Converters"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    Title="{x:Static resources:AppResources.Menu_Game}"
    BackgroundImageSource="bg_pattern.png">

    <ContentPage.Resources>
        <conv:AmountToHeightConverter x:Key="AmountToHeight" />
        <conv:IntToStrokeColorConverter x:Key="StrokeColor" />

        <!-- Стиль одного слоя жидкости -->
        <Style x:Key="LayerStyle" TargetType="Border">
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="Margin" Value="0,4,0,0" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="#33000000" Radius="4" Opacity="0.35" />
                </Setter.Value>
            </Setter>
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <shapes:RoundRectangle CornerRadius="10" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid Padding="12" RowDefinitions="Auto,*">
        <!-- Верхняя панель -->
        <Grid ColumnDefinitions="Auto,*,Auto" Padding="0,2,0,8">
            <Button Text="⟲" WidthRequest="40" HeightRequest="40"
                    CornerRadius="20" BackgroundColor="#2D3AFE" TextColor="White"
                    Command="{Binding UndoCommand}" />
            <Label Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"
                   FontSize="18" TextColor="White"
                   Text="{Binding Moves, StringFormat='Ходов: {0}'}" />
            <Button Grid.Column="2" Text="Сброс" Padding="12,6" CornerRadius="10"
                    BackgroundColor="#7B3DFF" TextColor="White" Command="{Binding ResetCommand}" />
        </Grid>

        <!-- Поле с пробирками -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Tubes}">
            <CollectionView.ItemsLayout>
                <!-- 5 колонок; масштаб пробирок задаём через VM: TubeScale -->
                <GridItemsLayout Orientation="Vertical" Span="5"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- ОДНА пробирка -->
                    <Grid Scale="{Binding TubeScale, Source={x:Reference GamePageRoot}}">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
        Command="{Binding Source={x:Reference GamePageRoot}, Path=BindingContext.SelectTubeCommand}"
        CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <!-- Контур пробирки + слои. Если у тебя уже есть разметка — оставь её, это каркас -->
                        <Border Padding="6" Stroke="#FFFFFF" StrokeThickness="2" BackgroundColor="#1AFFFFFF">
                            <Border.StrokeShape>
                                <shapes:RoundRectangle CornerRadius="18"/>
                            </Border.StrokeShape>

                            <VerticalStackLayout VerticalOptions="End"
                           BindableLayout.ItemsSource="{Binding Segments}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource LayerStyle}"
                    BackgroundColor="{Binding ColorHex}"
                    HeightRequest="{Binding Amount, Converter={StaticResource AmountToHeight}}" />
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
