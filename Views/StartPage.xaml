<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ColorTubes.Views.StartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    Title="ColorTubes">

    <Grid>
        <Image Source="fon_menu.jpg" Aspect="AspectFill"/>
        <BoxView Color="#66000000"/>

        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">
            <Label Text="ColorTubes"
             FontSize="56"
             TextColor="LightGreen"
             FontAttributes="Bold"
             HorizontalTextAlignment="Center" />

            <VerticalStackLayout Spacing="16">
                <Button Text="Новая игра"
                Padding="30,16"
                FontSize="20"
                CornerRadius="18"
                BackgroundColor="#80000000"
                TextColor="Yellow"
                Clicked="Play_Clicked"/>

                <Button Text="Рейтинг"
                Padding="30,16"
                FontSize="20"
                CornerRadius="18"
                BackgroundColor="#80000000"
                TextColor="HotPink"
                Clicked="OnRatingClicked" />

                <Button Text="Настройки"
                Padding="30,16"
                FontSize="20"
                CornerRadius="18"
                BackgroundColor="#80000000"
                TextColor="LightBlue"
                Clicked="Settings_Clicked"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>