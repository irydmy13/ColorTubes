<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="ColorTubes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ColorTubes.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Route="start"
        Title="Start"
        ContentTemplate="{DataTemplate views:StartPage}" />

    <!-- Основной TabBar: Menu / Rating / Settings -->
    <TabBar Route="main">

        <!-- MENU = StartPage, но уже внутри таббара -->
        <ShellContent
            Title="Game"
            Route="menu"
            ContentTemplate="{DataTemplate views:StartPage}" />

        <ShellContent
            Title="Rating"
            Route="rating"
            ContentTemplate="{DataTemplate views:RatingPage}" />

        <ShellContent
            Title="Settings"
            Route="settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />

    </TabBar>
</Shell>
