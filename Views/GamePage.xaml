<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ColorTubes.Views.GamePage"
    x:Name="GamePageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:ColorTubes.Resources.Localization"
    xmlns:conv="clr-namespace:ColorTubes.Converters"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    Title="{x:Static resources:AppResources.Menu_Game}"
    BackgroundImageSource="bg_pattern.png">

    <ContentPage.Resources>
        <conv:AmountToHeightConverter x:Key="AmountToHeight" />
        <conv:IntToStrokeColorConverter x:Key="StrokeColor" />

        <!-- Стиль одного слоя жидкости -->
        <Style x:Key="LayerStyle" TargetType="Border">
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="Margin" Value="0,4,0,0" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="#33000000" Radius="4" Opacity="0.35" />
                </Setter.Value>
            </Setter>
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <shapes:RoundRectangle CornerRadius="10" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid Padding="12" RowDefinitions="Auto,*">
        <!-- Верхняя панель -->
        <Grid ColumnDefinitions="Auto,*,Auto" Padding="0,2,0,8">
            <Button Text="⟲" WidthRequest="40" HeightRequest="40"
                    CornerRadius="20" BackgroundColor="#2D3AFE" TextColor="White"
                    Command="{Binding UndoCommand}" />
            <Label Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"
                   FontSize="18" TextColor="White"
                   Text="{Binding Moves, StringFormat='Ходов: {0}'}" />
            <Button Grid.Column="2" Text="Сброс" Padding="12,6" CornerRadius="10"
                    BackgroundColor="#7B3DFF" TextColor="White" Command="{Binding ResetCommand}" />
        </Grid>

        <!-- Поле: 3 колонки, перенос вниз -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Tubes}" SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="3" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- ОДНА ПРОБИРКА -->
                    <Grid WidthRequest="86" HeightRequest="260" Margin="10,16">
                        <!-- жест на всю колбу -->
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding BindingContext.SelectTubeCommand, Source={x:Reference GamePageRoot}}"
                                CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <!-- Горлышко -->
                        <Grid HeightRequest="14" VerticalOptions="Start" Margin="10,8,10,0" InputTransparent="True">
                            <shapes:Ellipse StrokeThickness="2"
                                            Stroke="{Binding Segments.Count, Converter={StaticResource StrokeColor}}"
                                            Fill="#00000000"
                                            InputTransparent="True" />
                        </Grid>

                        <!-- Тело колбы: скругляем ТОЛЬКО снизу -->
                        <Border Margin="8,16,8,6" InputTransparent="True"
                                Stroke="{Binding Segments.Count, Converter={StaticResource StrokeColor}}"
                                StrokeThickness="2">
                            <Border.StrokeShape>
                                <shapes:RoundRectangle CornerRadius="0,0,22,22" />
                            </Border.StrokeShape>

                            <!-- Внутренность -->
                            <Grid Padding="8" InputTransparent="True">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="28" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Слои снизу вверх -->
                                <Grid Grid.Row="1" VerticalOptions="End" InputTransparent="True">
                                    <Grid BindableLayout.ItemsSource="{Binding Segments}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource LayerStyle}"
                                                        HeightRequest="{Binding Amount, Converter={StaticResource AmountToHeight}, ConverterParameter=52}">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="{Binding ColorHex}" Offset="0.00" />
                                                            <GradientStop Color="{Binding ColorHex}" Offset="0.65" />
                                                            <GradientStop Color="#55FFFFFF" Offset="0.98" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
