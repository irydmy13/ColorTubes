<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ColorTubes.Views.LevelEditorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Редактор уровня">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry x:Name="NameEntry" Placeholder="Название уровня" />

            <Label Text="Layout JSON" FontAttributes="Bold" />
            <Editor x:Name="JsonEditor" AutoSize="TextChanges" HeightRequest="250" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Проверить JSON" Clicked="OnValidateClicked" />
                <Button Text="Сохранить" Clicked="OnSaveClicked" />
            </HorizontalStackLayout>

            <Label x:Name="StatusLabel" TextColor="Gray" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
